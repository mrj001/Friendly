<?xml version="1.0" encoding="utf-8"?>
<xs:schema id="SavePoint"
    elementFormDefault="unqualified"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
>
   <xs:element name="savepoint">
      <xs:simpleType>
         <xs:restriction base="xs:string">
             <xs:pattern value="\s*[0-9]{1,3}\s*" /> 
             <xs:pattern value="\s*([0-9]{1,3},{1}){1}([0-9]{3},{1})*([0-9]{3}){1}\s*" /> 
         </xs:restriction>
      </xs:simpleType>
   </xs:element>
   
</xs:schema>
